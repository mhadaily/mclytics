<div class="annual-wrapper">
  <div class="container-fluid">
    <div class="row m-t-1">
      <div class="col-xs-12 col-sm-12 col-md-3">
          <article class="statistic-box red">
              <div>
                  <div class="number" id="boxND"></div>
                  <div class="caption"><div>Total Amount</div></div>
              </div>
          </article>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-3">
          <article class="statistic-box purple">
              <div>
                  <div class="number" id="quantityND"></div>
                  <div class="caption"><div>Quantity Sold</div></div>
              </div>
          </article>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-3">
           <article class="statistic-box green">
              <div>
                  <div class="number" id="projectionND"></div>
                  <div class="caption"><div>Projection</div></div>
              </div>
          </article>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-3">
         <article class="statistic-box yellow">
            <div>
                <div class="number"> <a href="#" class="masterReset" {{action 'masterReset'}}>Reset All</a></div>
                <div class="caption"><div>Redrawing Charts</div></div>
            </div>
        </article>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-lg-12">
            <section class="box-typical box-typical-dashboard panel panel-default lobipanel" >
              <header class="box-typical-header panel-heading">
                  <h3 class="panel-title">Current Month <button class="reset pull-xs-right btn btn-sm btn-info" {{action 'reset' 'monthlyChart'}}>X</button></h3>
              </header>
              <div class="box-typical-body panel-body" id="monthlyChart">
              </div>
            </section>

            <section class="box-typical box-typical-dashboard panel panel-default lobipanel" >
              <header class="box-typical-header panel-heading">
                  <h3 class="panel-title">Current Month <button class="reset pull-xs-right btn btn-sm btn-info" {{action 'reset' 'monthlyLineChart'}}>X</button></h3>
              </header>
              <div class="box-typical-body panel-body" id="monthlyLineChart">
              </div>
            </section>

      </div>
    </div>
  <div class="row">
      <div class="col-md-4">

        <section class="box-typical box-typical-dashboard panel panel-default lobipanel" >
              <header class="box-typical-header panel-heading">
                  <h3 class="panel-title">Channels <button class="reset pull-xs-right btn btn-sm btn-info" {{action 'reset' 'departmentChart'}}>X</button></h3>
              </header>
              <div class="box-typical-body panel-body" id="departmentChart">

              </div>
          </section>


         <section class="box-typical box-typical-dashboard panel panel-default lobipanel" >
              <header class="box-typical-header panel-heading">
                  <h3 class="panel-title">Channels Pie Chart <button class="reset pull-xs-right btn btn-sm btn-info" {{action 'reset' 'departmentPieChart'}}>X</button></h3>
              </header>
              <div class="box-typical-body panel-body" id="departmentPieChart">

              </div>
          </section>


      </div>
      <div class="col-md-4">
           <section class="box-typical box-typical-dashboard panel panel-default lobipanel" >
              <header class="box-typical-header panel-heading">
                  <h3 class="panel-title">Product Groups <button class="reset pull-xs-right btn btn-sm btn-info" {{action 'reset' 'groupChart'}}>X</button></h3>
              </header>
              <div class="box-typical-body panel-body" id="groupChart">

              </div>
          </section>
      </div>
      <div class="col-md-4">
        <section class="box-typical box-typical-dashboard panel panel-default lobipanel" >
              <header class="box-typical-header panel-heading">
                  <h3 class="panel-title">Status <button class="reset pull-xs-right btn btn-sm btn-info" {{action 'reset' 'statusChart'}}>X</button></h3>
              </header>
              <div class="box-typical-body panel-body" id="statusChart">

              </div>
          </section>

            <section class="box-typical box-typical-dashboard panel panel-default lobipanel" >
              <header class="box-typical-header panel-heading">
                  <h3 class="panel-title">Status Piechart <button class="reset pull-xs-right btn btn-sm btn-info" {{action 'reset' 'statusPieChart'}}>X</button></h3>
              </header>
              <div class="box-typical-body panel-body" id="statusPieChart">

              </div>
          </section>
      </div>
  </div>

  </div>
</div>

{{yield}}